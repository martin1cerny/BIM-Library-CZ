<UserControl x:Class="BLSpec.Controls.PropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="self"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid  ItemsSource="{Binding ElementName=self, Path=PropertySet}" AutoGenerateColumns="False" SelectedItem="{Binding ElementName=self, Path=SelectedProperty}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Definice" Binding="{Binding Definition}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
