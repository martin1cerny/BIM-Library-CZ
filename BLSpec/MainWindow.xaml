<Window x:Class="BLSpec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIM Specifikace" Height="500" Width="700" Icon="img/TACR.ico" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Name="File" Header="Soubor">
                <MenuItem Name="miOpen" Header="Otevřít" Click="miOpen_Click"/>
                <MenuItem Name="miSave" Header="Uložit" Click="miSave_Click"/>
                <MenuItem Name="miSaveAs" Header="Uložit jako..." Click="miSaveAs_Click"/>
                <MenuItem Name="miCloseModel" Header="Zavřít" Click="miCloseModel_Click"/>
                <MenuItem Name="miExit" Header="Ukončit" Click="miExit_Click"/>
            </MenuItem>
            <MenuItem Name="Plugins" Header="Plug-ins"/>
            <MenuItem Name="miAbout" Header="O programu" Click="miAbout_Click"/>
        </Menu>
    </Grid>
</Window>
